<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.core.widget.NestedScrollView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints">

    <com.google.android.material.card.MaterialCardView
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp"
        android:layout_marginTop="7dp"
        android:layout_marginBottom="7dp"
        app:cardCornerRadius="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="7dp"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="7dp">
            <TextView
                android:id="@+id/comProfile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Company Details"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/comSummary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Company Summary"
                android:maxLines="4"/>


            <ImageButton
                android:id="@+id/btnShowmore"
                android:layout_width="match_parent"
                android:textAllCaps="false"
                android:src="@drawable/baseline_keyboard_arrow_down_black_18"
                android:textColor="@android:color/holo_blue_light"
                android:background="@android:color/transparent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/comSummary"
                android:layout_alignParentRight="true"
                android:gravity="center"
                />





            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/employeesLbl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Employees" />

                <TextView
                    android:id="@+id/employees"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Employees"
                    android:layout_alignRight="@id/employeesLbl"/>

                <TextView
                    android:id="@+id/sector"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Sector"/>


                <TextView
                    android:id="@+id/industry"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Industry"/>

                <TextView
                    android:id="@+id/website"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Website"/>



                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@android:color/darker_gray"/>


            </LinearLayout>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>


    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>